@model FamilyAccounting.Web.Models.TransactionViewModel

@{
    ViewData["Title"] = "Make icome";
}

<h1>Make income</h1>

<div>
    <form method="post" asp-controller="Transaction" asp-action="MakeIncome">
        <input placeholder="Enter id of a target wallet" style="display:none" asp-for="TargetWalletId" />
        <div class="d-flex justify-content-between" style="margin-bottom:20px">
            <input style="margin-right:20px" class="form-control" placeholder="Describe the income" asp-for="Description" />
            <input style="margin-right:20px" class="form-control" placeholder="Enter amount" asp-for="Amount" />
            <select asp-for="CategoryId" class="form-control">
                @foreach (var s in ViewBag.Categories)
                {
                    <option value="@s.Id">@s.Description</option>
                }
            </select>
        </div>
        <button class="btn btn-primary" type="submit" asp-controller="Transaction" asp-action="MakeIncome">
            Make income
        </button>
        <button class="btn btn-info" asp-controller="Wallet" asp-action="Details" asp-route-id="@Model.TargetWalletId">Back to wallet</button>
    </form>
</div>