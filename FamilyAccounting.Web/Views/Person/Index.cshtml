@model FamilyAccounting.Web.Models.IndexPersonViewModel

@{
    ViewData["Title"] = "Family list";
}

<h1 style="float:left;">@ViewData["Title"]</h1>
<table style="float: right;">
    <tbody>
        <tr>
            <td style="padding-right: 200px;">
                <a asp-controller="Person" asp-action="Add"
                   class="btn btn-outline-dark">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    Add new family member
                </a>
            </td>
        </tr>
    </tbody>
</table>
<table style="text-align:center" class="table">
    <thead>
        <tr>
            <th>Person Name</th>
            <th>Quantity of wallets</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Persons)
        {
        <tr>           
                <td>
                    <a asp-controller="Person" asp-action="Details" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName) </a>
                </td>               
                <td>
                    @Html.DisplayFor(modelItem => item.WalletsCount)
                </td>
        </tr>
        }
    </tbody>
</table>


